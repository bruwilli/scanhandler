<h3>Users</h3>
<%= form_tag(people_path, :method => :get) do %>
  <%= label_tag(:first_name, "First name:") %>
  <%= text_field_tag(:first_name) %>
  <%= label_tag(:last_name, "Last name:") %>
  <%= text_field_tag(:last_name) %><br>
  Fuzzy search: <%= check_box_tag(:fuzzy) %><br>
  Search for nicknames: <%= check_box_tag(:nicknames) %><br>
  <%= submit_tag("Search") %>
<% end %>
<% if @people.count > 0 %>
  <div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Added</th>
      </tr>
    </thead>
    <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.first_name, person %></td>
        <td><%= person.last_name %></td>
        <td><%= person.created_at.to_date %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
<% end %>
