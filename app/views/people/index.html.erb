<h3>Coach Lookup</h3>
<% person = Person.new %> 
<%= simple_form_for person, html: {class: "form-horizontal"} do |f| %>
  <%= f.input :first_name %> 
  <div class="control-group">
    <label class="control-label" for="nicknames">
      Search for nicknames 
    </label>
    <div class="controls">
      <%= check_box_tag(:nicknames) %><br>
    </div>
  </div>
  <%= f.input :last_name %>
  Fuzzy search: <%= check_box_tag(:fuzzy) %><br>
<% end %>

<%= form_tag(people_search_path, method: :get, id: "person-search-form" ) do %>
  <%= label_tag(:first_name, "First name:") %>
  <%= text_field_tag(:first_name, nil, autocomplete: "off") %>
  <%= label_tag(:last_name, "Last name:") %>
  <%= text_field_tag(:last_name, nil, autocomplete: "off") %><br>
  Fuzzy search: <%= check_box_tag(:fuzzy) %><br>
  Search for nicknames: <%= check_box_tag(:nicknames) %><br>
<% end %>
<div id="person-search-results"></div>
