<% if @people.count > 0 %>
  <div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Added</th>
        <th>Added By</th>
        <th>Scanned?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.created_at.to_date %></td>
        <td><%= person.user.name ? person.user.name : person.user.email %></td>
        <td><%= image_tag("check.png") if person.scans.count > 0 %></td>
        <td>
          <%= link_to image_tag("view.png", border: 0), person, title: "View info and scans" %>
          <% if can? :destroy, person %>
            <%= link_to image_tag("delete.png", border: 0), 
                        person, 
                        confirm: 'Are you sure you want to delete this person?', 
                        method: :delete,
                        title: "Delete this person" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
<% end %>