<% if @people.count > 0 %>
  <div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Added</th>
      </tr>
    </thead>
    <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.first_name, person %></td>
        <td><%= person.last_name %></td>
        <td><%= person.created_at.to_date %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
<% end %>