<h3>Users
    <%= link_to new_user_invitation_path, 
                            title: "Invite new user",
                            class: "btn" do %>
                  <i class="icon-plus"></i> Add New User
                <% end %>
</h3>

<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.nil? ? "Deactivated" : user.roles.first.name.titleize %></td>
      <td>
        <%= link_to "\#role-options-#{user.id}", 
                    :data => { :toggle => "modal" },
                    :title => "Change role",
                    :class => 'btn' do %>
          <i class="icon-user"></i>
        <% end %>
        <%= render user %>
      </td>
      <td>
        <% if (user != current_user && ! user.roles.empty?) %>
          <%= link_to user_path(user), 
                      :data => { :confirm => "Are you sure you want to deactivate this user?" }, 
                      :method => :delete, 
                      :title => "Deactivate user",
                      :class => 'btn btn-danger' do %>
            <i class="icon-remove-circle icon-white"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
