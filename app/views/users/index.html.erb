<h3>Users
    <%= link_to new_user_invitation_path, 
                            title: "Invite new user",
                            class: "btn" do %>
                  <i class="icon-plus"></i> Add New User
                <% end %>
</h3>

<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.nil? ? "Deactivated" : user.roles.first.name.titleize %></td>
      <td>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
        <%= render user %>
      </td>
      <td><%= link_to("Deactivate user", user_path(user), :data => { :confirm => "Are you sure you want to deactivate this user?" }, :method => :delete, :class => 'btn btn-mini') unless (user == current_user || user.roles.empty?) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
